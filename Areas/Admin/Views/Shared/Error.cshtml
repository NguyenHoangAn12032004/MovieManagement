@{
    ViewData["Title"] = "Error";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Lỗi hệ thống</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    <p class="mb-0"><strong>Chi tiết lỗi:</strong></p>
                    <code>@ViewBag.ErrorMessage</code>
                </div>
            }
            else
            {
                <p>Đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.</p>
            }
            
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn btn-primary me-2">
                    <i class="bi bi-house-door me-1"></i> Trang chủ Admin
                </a>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Về trang chính
                </a>
            </div>
        </div>
    </div>
</div> 