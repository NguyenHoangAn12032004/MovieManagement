<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-primary text-white" style="width: 250px; height: 100vh; position: fixed; left: 0; top: 0;">
            <div class="p-3 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-circle me-2 fs-4"></i>
                    <h5 class="mb-0">Admin Cinema</h5>
                </div>
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-white" title="Trang chủ">
                    <i class="bi bi-house-door fs-4"></i>
                </a>
            </div>
            <hr class="border-light opacity-25">
            <ul class="nav flex-column p-2">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-grid me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Genre" asp-action="Index">
                        <i class="bi bi-tags me-2"></i> Thể loại phim
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Movie" asp-action="Index">
                        <i class="bi bi-film me-2"></i> Phim
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Seats" asp-action="Index">
                        <i class="bi bi-bookmark-check me-2"></i> Ghế
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Showtime" asp-action="Index">
                        <i class="bi bi-calendar-event me-2"></i> Lịch chiếu
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Ticket" asp-action="Index">
                        <i class="bi bi-ticket-perforated me-2"></i> Vé
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Concession" asp-action="Index">
                        <i class="bi bi-cup-straw me-2"></i> Bắp Nước
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="User" asp-action="Index">
                        <i class="bi bi-people me-2"></i> Người dùng
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-person-badge me-2"></i> Nhân viên
                    </a>
                </li>
                @* Ẩn mục Tài khoản NV
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Admin" asp-controller="StaffAccount" asp-action="Index">
                        <i class="bi bi-person-gear me-2"></i> Tài khoản NV
                    </a>
                </li>
                *@
            </ul>
        </div>

        <!-- Main content -->
        <div style="margin-left: 250px; width: calc(100% - 250px);">
            <!-- Top navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-primary bg-opacity-25">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between w-100">
                        <div>
                            <button class="btn btn-outline-primary border-0" id="sidebarToggle">
                                <i class="bi bi-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Content -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Toggle sidebar
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('div[style^="margin-left"]');
            
            if (sidebar.style.marginLeft === '-250px') {
                sidebar.style.marginLeft = '0';
                mainContent.style.marginLeft = '250px';
                mainContent.style.width = 'calc(100% - 250px)';
            } else {
                sidebar.style.marginLeft = '-250px';
                mainContent.style.marginLeft = '0';
                mainContent.style.width = '100%';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 