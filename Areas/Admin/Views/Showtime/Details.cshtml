@model MovieManagement.Models.Showtime

@{
    ViewData["Title"] = "Chi tiết lịch chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết lịch chiếu</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle mr-1"></i>
            Thông tin chi tiết lịch chiếu
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Phim:</dt>
                        <dd class="col-sm-8">@Model.Movie.Title</dd>
                        
                        <dt class="col-sm-4">Ngày chiếu:</dt>
                        <dd class="col-sm-8">@Model.ShowDateTime.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">Giờ chiếu:</dt>
                        <dd class="col-sm-8">@Model.ShowDateTime.ToString("HH:mm")</dd>
                        
                        <dt class="col-sm-4">Phòng chiếu:</dt>
                        <dd class="col-sm-8">@Model.Theater.Name</dd>
                        
                        <dt class="col-sm-4">Loại màn hình:</dt>
                        <dd class="col-sm-8">@Model.ScreenType</dd>
                        
                        <dt class="col-sm-4">Giá vé:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("N0") VNĐ</dd>
                        
                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @{
                                string statusClass = "badge-success";
                                string statusText = "ĐANG HOẠT ĐỘNG";
                                
                                if (Model.ShowDateTime < DateTime.Now)
                                {
                                    statusClass = "badge-secondary";
                                    statusText = "ĐÃ KẾT THÚC";
                                }
                            }
                            <span class="badge @statusClass">@statusText</span>
                        </dd>
                    </dl>
                </div>
                
            </div>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Trở về
                </a>
            </div>
        </div>
    </div>
</div> 