@model MovieManagement.Models.Showtime

@{
    ViewData["Title"] = "Xóa lịch chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Xóa lịch chiếu</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle mr-1"></i>
            Xác nhận xóa lịch chiếu
        </div>
        <div class="card-body">
            <h3 class="text-danger">Bạn có chắc chắn muốn xóa lịch chiếu này?</h3>
            
            <div class="row mt-4">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Phim:</dt>
                        <dd class="col-sm-8">@Model.Movie.Title</dd>
                        
                        <dt class="col-sm-4">Ngày chiếu:</dt>
                        <dd class="col-sm-8">@Model.ShowDateTime.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">Giờ chiếu:</dt>
                        <dd class="col-sm-8">@Model.ShowDateTime.ToString("HH:mm")</dd>
                        
                        <dt class="col-sm-4">Phòng chiếu:</dt>
                        <dd class="col-sm-8">@Model.Theater.Name</dd>
                        
                        <dt class="col-sm-4">Loại màn hình:</dt>
                        <dd class="col-sm-8">@Model.ScreenType</dd>
                        
                        <dt class="col-sm-4">Giá vé:</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("N0") VNĐ</dd>
                    </dl>
                </div>
                
            </div>
            
            <div class="mt-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Trở về
                    </a>
                </form>
            </div>
        </div>
    </div>
</div> 