@model MovieManagement.Models.Concession

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Xác nhận xóa sản phẩm
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa sản phẩm này không? Hành động này không thể hoàn tác.
                    </div>

                    <div class="row">
                        <div class="col-md-4">                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(Model.ImagePath))
                                {
                                    <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 200px;">
                                }
                                else
                                {
                                    <div class="bg-light d-flex align-items-center justify-content-center rounded shadow" style="height: 200px;">
                                        <div class="text-center">
                                            <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                            <p class="text-muted">Không có hình ảnh</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-md-8">
                            <h4 class="text-danger">@Model.Name</h4>
                            
                            <dl class="row">
                                <dt class="col-sm-4">Giá bán:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge badge-success">
                                        @Model.Price.ToString("N0") đ
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check mr-1"></i>
                                            Có sẵn
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times mr-1"></i>
                                            Hết hàng
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Mô tả:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Description))
                                    {
                                        @Model.Description
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có mô tả</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?')">
                            <i class="fas fa-trash mr-1"></i>
                            Xác nhận xóa
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times mr-1"></i>
                        Hủy
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye mr-1"></i>
                        Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
