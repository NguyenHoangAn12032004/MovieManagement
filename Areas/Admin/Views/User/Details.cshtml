@model MovieManagement.Models.ApplicationUser

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Chi tiết người dùng</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user mr-1"></i>
            Thông tin chi tiết người dùng
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Mã người dùng:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Tên đăng nhập:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>

                        <dt class="col-sm-3">Họ:</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>
                        
                        <dt class="col-sm-3">Tên:</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">
                            @Model.Email
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success ms-2">Đã xác thực</span>
                            }
                            else
                            {
                                <span class="badge bg-danger ms-2">Chưa xác thực</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Số điện thoại:</dt>
                        <dd class="col-sm-9">
                            @(Model.PhoneNumber ?? "Chưa cập nhật")
                            @if (Model.PhoneNumberConfirmed)
                            {
                                <span class="badge bg-success ms-2">Đã xác thực</span>
                            }
                            else
                            {
                                <span class="badge bg-danger ms-2">Chưa xác thực</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Vai trò:</dt>
                        <dd class="col-sm-9">
                            @if (ViewBag.Roles != null)
                            {
                                foreach (var role in ViewBag.Roles)
                                {
                                    <span class="badge bg-primary me-1">@role</span>
                                }
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.LockoutEnabled && Model.LockoutEnd > DateTimeOffset.Now)
                            {
                                <span class="badge bg-danger">Bị khóa</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Xác thực hai yếu tố:</dt>
                        <dd class="col-sm-9">
                            @if (Model.TwoFactorEnabled)
                            {
                                <span class="badge bg-success">Đã bật</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Chưa bật</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div> 