@{
    ViewData["Title"] = "Debug User Roles";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Debug User Roles</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-bug mr-1"></i>
            Debug Information
        </div>
        <div class="card-body">
            @if (ViewBag.DebugInfo != null)
            {
                <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px;">
@foreach (string line in ViewBag.DebugInfo)
{
@Html.Raw(line + "\n")
}
                </pre>
            }
            else
            {
                <p>Không có thông tin debug.</p>
            }
        </div>
    </div>
    
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>
