@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại email xác nhận";
}

<h1>@ViewData["Title"]</h1>
<h2>Nhập email của bạn để gửi lại email xác nhận.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="floating-label-group">
                <label asp-for="Input.Email" class="floating-label"></label>
                <input asp-for="Input.Email" class="form-control" placeholder=" " />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi lại email xác nhận</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
