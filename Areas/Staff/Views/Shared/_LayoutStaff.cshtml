<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nhân viên Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-primary text-white" style="width: 250px; min-height: 100vh; position: fixed; left: 0; top: 0; z-index: 1000;">
            <div class="p-3 border-bottom border-light border-opacity-25">
                <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-person-badge-fill me-2 fs-4"></i>
                    <h5 class="mb-0">Nhân viên Cinema</h5>
                </div>
                <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-white" title="Trang chủ">
                    <i class="bi bi-house-door fs-4"></i>
                </a>
            </div>
            <hr class="border-light opacity-25">
            <ul class="nav flex-column p-2">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Staff" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-grid me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Staff" asp-controller="Ticket" asp-action="Index">
                        <i class="bi bi-ticket-perforated me-2"></i> Xử lý vé
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Staff" asp-controller="Home" asp-action="Profile">
                        <i class="bi bi-person-circle me-2"></i> Thông tin cá nhân
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white d-flex align-items-center" asp-area="Staff" asp-controller="Home" asp-action="Schedule">
                        <i class="bi bi-calendar-week me-2"></i> Lịch làm việc
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main content -->
        <div style="margin-left: 250px; width: calc(100% - 250px);">
            <!-- Top navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-success bg-opacity-25">
                <div class="container-fluid">
                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="Staff" asp-controller="Home" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Content -->
            <main role="main" class="p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
