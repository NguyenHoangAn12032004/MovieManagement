@section Styles {
    <style>
        .hero-section {
            position: relative;
            margin-top: -70px;
            height: 100vh;
            min-height: 600px;
            overflow: hidden;
        }

        .carousel-item {
            height: 100vh;
            min-height: 600px;
        }
        
        .hero-backdrop-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        
        .hero-backdrop {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scale(1.05);
            transition: transform 10s ease;
        }
        
        .carousel-item.active .hero-backdrop {
            transform: scale(1);
        }
        
        .hero-backdrop-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 50%, rgba(0,0,0,0.4) 100%);
        }

        .carousel-caption {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 0;
            right: auto;
            bottom: auto;
            width: 50%;
            text-align: left;
            padding: 0;
        }
        
        .hero-title {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
            transition-delay: 0.2s;
        }
        
        .hero-meta {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.5s ease, transform 0.5s ease;
            transition-delay: 0.4s;
        }
        
        .hero-overview {
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            opacity: 0;
