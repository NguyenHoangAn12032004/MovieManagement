@{
    ViewData["Title"] = "Email Configuration Test";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-envelope-open-text me-2"></i>
                        Email Configuration Test
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-plug me-2"></i>
                                        SMTP Connection Test
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted">Test the SMTP server connection without sending an email.</p>
                                    <form asp-action="TestSmtp" method="post">
                                        <button type="submit" class="btn btn-info">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Test SMTP Connection
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-paper-plane me-2"></i>
                                        Send Test Email
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted">Send a test email to verify the complete email functionality.</p>
                                    <form asp-action="SendTestEmail" method="post">
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email Address</label>
                                            <input type="email" class="form-control" id="email" name="email" required 
                                                   placeholder="test@example.com">
                                        </div>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-envelope me-2"></i>
                                            Send Test Email
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="card border-warning">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Configuration Notes
                                </h5>
                            </div>
                            <div class="card-body">
                                <h6>Common SMTP Issues:</h6>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-exclamation-triangle text-warning me-2"></i><strong>Authentication Required (5.7.0):</strong> Check your email password. For Gmail, use App Password instead of regular password.</li>
                                    <li><i class="fas fa-shield-alt text-info me-2"></i><strong>Less Secure Apps:</strong> Gmail requires App Password for third-party applications.</li>
                                    <li><i class="fas fa-lock text-danger me-2"></i><strong>SSL/TLS Issues:</strong> Ensure EnableSsl is set to true for Gmail.</li>
                                    <li><i class="fas fa-network-wired text-primary me-2"></i><strong>Firewall:</strong> Check if your firewall blocks SMTP port 587.</li>
                                </ul>

                                <h6 class="mt-3">Gmail App Password Setup:</h6>
                                <ol>
                                    <li>Go to your Google Account settings</li>
                                    <li>Select Security</li>
                                    <li>Enable 2-Step Verification</li>
                                    <li>Generate an App Password</li>
                                    <li>Use the App Password in appsettings.json</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
